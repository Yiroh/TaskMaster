{
  "name": "todo-list-app",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "start-server": "node server.js",
    "electron-dev": "concurrently \"npm run start-server\" \"npm start --prefix client\" \"wait-on http://localhost:3000 && electron .\"",
    "build-react": "npm run build --prefix client",
    "dist": "cross-env NODE_ENV=production npm run build-react && electron-builder"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "electron-store": "^7.0.3",
    "express": "^4.19.2",
    "mongoose": "^8.4.5"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "electron": "^12.0.0",
    "electron-builder": "^22.10.5",
    "wait-on": "^5.3.0"
  },
  "build": {
    "appId": "com.taskmaster.app",
    "productName": "TaskMaster",
    "directories": {
      "output": "dist"
    },
    "files": [
      "client/build/**/*",
      "index.js",
      "server.js",
      "node_modules/**/*"
    ],
    "asar": false,
    "win": {
      "target": "nsis",
      "icon": "path/to/your/icon.ico"
    }
  }
}
